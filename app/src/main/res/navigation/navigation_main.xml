<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_main"
    app:startDestination="@id/splashFragment">
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.onixloginhomework.fragments.splash.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_questionOneTestFragment"
            app:destination="@id/questionOneTestFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/splashResultFragment"
        android:name="com.example.onixloginhomework.fragments.resultSplash.SplashResultFragment"
        android:label="SplashResultFragment"
        tools:layout="@layout/fragment_splash_result">

        <argument
            android:name="scoreOnes"
            app:argType="integer" />
        <argument android:name="scoreTwos"
            app:argType="integer" />
        <argument
            android:name="scoreThrees"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/questionOneTestFragment"
        android:name="com.example.onixloginhomework.fragments.questiontest.one.QuestionOneTestFragment"
        android:label="QuestionOneTestFragment"
        tools:layout="@layout/fragment_one_question">
        <action
            android:id="@+id/action_questionOneTestFragment_to_questionTwoTestFragment"
            app:destination="@id/questionTwoTestFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/questionTwoTestFragment"
        android:name="com.example.onixloginhomework.fragments.questiontest.two.QuestionTwoTestFragment"
        android:label="QuestionTwoTestFragment"
        tools:layout="@layout/fragment_two_question">
        <action
            android:id="@+id/action_questionTwoTestFragment_to_questionThreeTestFragment"
            app:destination="@id/questionThreeTestFragment"
            app:popUpToInclusive="false" />
        <argument
            android:name="scoreOnes"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/questionThreeTestFragment"
        android:name="com.example.onixloginhomework.fragments.questiontest.three.QuestionThreeTestFragment"
        android:label="QuestionThreeTestFragment"
        tools:layout="@layout/fragment_three_question">
        <action
            android:id="@+id/action_questionThreeTestFragment_to_splashResultFragment"
            app:destination="@id/splashResultFragment" />
        <argument
            android:name="scoreOnes"
            app:argType="integer" />
        <argument
            android:name="kverty"
            app:argType="integer"/>
    </fragment>
</navigation>